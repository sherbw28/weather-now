<div class="text-center">
  <h1>Log In</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      
      <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
    
    <% end %>
    
    <p class="mt-3 text-center">New User?&ensp;<%= link_to "アカウント作成", new_user_path %></p>
  </div>
</div>